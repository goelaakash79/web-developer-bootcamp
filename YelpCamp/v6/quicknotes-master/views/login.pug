      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body.account-bg
    .account-wrapper
      .account-body
        h3.account-body-title Welcome back to Quick Notes.
        h5.account-body-subtitle Sign in to access your notes.
        if msg
            h4
                if error
                    font(color='red') #{msg}
                else
                    font(color='green') #{msg}
        form.form.account-form(method='POST', action='/validate')
          .form-group
            label.placeholder-hidden(for='login-username') Username
            input#login-username.form-control(type='text', name='username' , placeholder='Username', tabindex='1' required='required')
          .form-group
            label.placeholder-hidden(for='login-password') Password
            input#login-password.form-control(type='password', name='password' , placeholder='Password', tabindex='2' required='required')
          .form-group
            button.btn.btn-primary.btn-block.btn-lg(type='submit', tabindex='4')
              | Signin &nbsp;
              i.fa.fa-play-circle
      .account-footer
        p
          | Don&apos;t have an account? &nbsp;
          a(href='/signup') Create an Account!
    if(mobile)
      .footer.navbar-fixed-bottom
          center
            a(href='http://quicknotes-cloudnotes.rhcloud.com/app.apk')
                img(src='/img/banner.png',height='40%',width='40%')
    script(src='./js/libs/jquery-1.10.1.min.js')
