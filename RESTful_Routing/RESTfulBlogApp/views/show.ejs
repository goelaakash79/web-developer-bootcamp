<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.heading %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.url %>">   
            <div class="content">
                <span><%= blog.created.toDateString() %></span>    
            </div>
            <div class="description">
                <p><%- blog.body %></p>        
            </div>
            <div class="description">
                <p><%- blog.category %></p>        
            </div>
            <div class="description">
                <p><%- blog.slug %></p>        
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">     <!--Method Override-->
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>    

<% include partials/footer %>