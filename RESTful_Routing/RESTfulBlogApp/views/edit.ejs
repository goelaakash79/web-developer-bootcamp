<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!--<form class="ui form" action="/blogs/<%= blog._id %>" method="PUT"> ///PUT METHOD NOT SUPPORTED, toh kya hua, colt bhau ke pass jugaad hai!!-->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">    <!-- this is the juggaad -->
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[heading]" value="<%= blog.heading %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[url]" value="<%= blog.url %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textArea name="blog[body]"><%= blog.body %></textArea>
        </div>
        <div class="field">
            <label>Category</label>
            <input type="text" name="blog[category]" value="<%= blog.category %>">
        </div>
        <div class="field">
            <label>Slug</label>
            <input type="text" name="blog[slug]" value="<%= blog.slug %>">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include partials/footer %>